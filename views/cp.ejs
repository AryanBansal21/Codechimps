<% if (Cp!=null) {%>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%- Cp.name%></li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-12 col-md-4">
            <img src="/uploads/<%- Cp.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- Cp.name%>" laoding="lazy">
        </div>

        <div class="col-12 col-md-8 mb-5">
            <div class="row">
              <div class="col-12"><h1><%- Cp.name %></h1></div>
              <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- Cp.category %></div>
              <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- Cp.email %></div>
              <div class="col-12" style="white-space: pre-line;">
                <h4>Blog Description</h4>
                <%- Cp.description %>
            </div>
        </div>  
    </div>
    
<% } else { %>
        <p>No item found.</p>
      <% } %>

