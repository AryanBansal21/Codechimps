<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
  <div class="col-12 col-lg-6">
    <img src="/img/lakimg.png" width="607"height="510" class="d-block mx-lg-auto img-fluid"loading="lazy" alt="Compi with Blogs"/>
  </div>
  <div class="col-12 col-lg-6">
    <h1 class="display-5 fw-bold mb-3">
        Welcome!
    </h1>
    <p class="lead">
        CodeChimps provides you free access to hundreds of articles and blogs posted by programmers
        around the world. You can even post your own articles and blogs.
        <br>Scroll through to see the latest blogs and discussion topics.
    </p>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
      <a href="/explore-latest" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Latest Blogs</a>
      <a href="/explore-random" class="btn btn-outline-secondary btn-lg px-4 me-md-2">Random Blogs</a>
    </div>
  </div>
</div>

<!--Categories start-->

<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">


    <%if (categories!=''){%>
        <% categories.forEach(function(category,index){ %>
        <a href="/categories/<%- category.name %>" class="col text-center category__link">
            <div class="category__img shadow">
                <img src="img/<%-category.image %>" alt="<%- category.name %>" loading="lazy" />
            </div>
            <div class="pt-1"><%- category.name %></div>
        </a>
        <% }) %>
    <%} %>

  <a href="/categories" class="col text-center category__link">
    <div class="category__img shadow">
      <img src="img/view-all.jpg" alt="View All Categories" loading="lazy" />
    </div>
    <div class="pt-1">View All</div>
  </a>
</div>

<!--Categories end-->

<!--Latest start-->

<section class="pb-4 pt-4">
  <div class="d-flex mb-2 align-items-center">
    <h2>Latest Blogs</h2>
    <a href="/explore-latest" class="ms-auto">View More</a>
  </div>
  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
      <% if (blog!=''){ %>

        <% blog.latest.forEach(function(cp, index){%>

            <a href="/cp/<%= cp._id%>#" class="col text-center category__link">
                <div class="category__img category__img--large shadow">
                  <img src="/uploads/<%= cp.image%>" alt="<%=cp.name%>" loading="lazy" />
                </div>
                <div class="pt-1"><%=cp.name%></div>
              </a>
        <%})%>  
      <%}%>
  </div>
</section>

<!--Latest end-->




<!--Graph start-->

<section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
      <h2>Graphs</h2>
      <a href="/categories/Graphs" class="ms-auto">View More</a>
    </div>
    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
        <% if (typeof blog.graphs!='undefined' && blog.graphs.length>0){ %>
  
          <% blog.graphs.forEach(function(cp, index){%>
  
              <a href="/cp/<%= cp._id%>#" class="col text-center category__link">
                  <div class="category__img category__img--large shadow">
                    <img src="/uploads/<%= cp.image%>" alt="<%=cp.name%>" loading="lazy" />
                  </div>
                  <div class="pt-1"><%=cp.name%></div>
                </a>
          <%})%>  
        <%}%>
    </div>
  </section>
  
  <!--Graph end-->



  <!--Miscellaneous start-->

<section class="pb-4 pt-4">
  <div class="d-flex mb-2 align-items-center">
    <h2>Miscellaneous</h2>
    <a href="/categories/Miscellaneous" class="ms-auto">View More</a>
  </div>
  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
      <% if (typeof blog.misc!='undefined' && blog.misc.length>0){ %>

        <% blog.misc.forEach(function(cp, index){%>

            <a href="/cp/<%= cp._id%>#" class="col text-center category__link">
                <div class="category__img category__img--large shadow">
                  <img src="/uploads/<%= cp.image%>" alt="<%=cp.name%>" loading="lazy" />
                </div>
                <div class="pt-1"><%=cp.name%></div>
              </a>
        <%})%>  
      <%}%>
  </div>
</section>

<!--Miscellaneous end-->












<!--Submit start-->

